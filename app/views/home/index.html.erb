<h1>맛집 리스트</h1>

<table>
  <thead>
    <tr>
      <th>위치</th>
      <th>이름</th>
      <th>평점</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |x| %>
      <tr>
        <td><%= x.location %></td>
        <td><%= x.name %></td>
        <td><%= x.stars %></td>
        <td><a href="home/show/<%= x.id %>">보기</a></td>
        <td><a href="home/edit/<%= x.id %>">수정</a>
        <td><a href="home/destroy/<%= x.id %>">삭제</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="home/new">추가하기</a><br>
<a href="home/destroy_all">모두 지우기</a>